<h1>New Comment</h1>

<%= form_with model: @comment, url: user_post_comments_url do |form|%>

    <div class="my-2">
        <%= form.label :text %> <br>
        <%= form.text_area :text, placeholder:'comment'%>
    </div>

    <div>
       <%= form.submit "Submit ", class: "bg-slate-600 text-white rounded shadow px-3 py-1" %>
    </div>
<% end %>
