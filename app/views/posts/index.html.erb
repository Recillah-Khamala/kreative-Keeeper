<section class="hover:text-white px-8 py-8">
  <%= render 'common/user', user: @user%>
  <%= link_to "Create Post", new_user_post_path, class: "uppercase bg-green-600 text-slate-100 text-lg hover:bg-green-500 active:scale-105 ml-auto px-3 py-1 rounded block w-2/5 mt-5 text-center" %>
  <ul class="gap-3">
    <% @posts.each do |post| %>
      <li class="border list-none mt-4 hover:bg-slate-200 text-black rounded-md">
          <%= link_to user_post_path(@user, post) do %>
              <%= render 'common/post', post: post%>
              <hr>
              <%= render 'common/comments', comments: post.recent_comments %>
          <% end %>
      </li>
    <% end %>
  </ul>
  <button class="bg-slate-500 text-white px-20 py-1 mx-32 rounded shadow mt-5 hover:bg-slate-600 active:scale-105">Pagination</button>
</section>