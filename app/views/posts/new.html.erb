<h1>New Post</h1>

<%= form_with model: @post, url: user_posts_path do |form|%>
  <%= form.text_field :title, class:"block w-full flex-1 border-black border-4 p-4 sm:text-sm", placeholder:"Title" %>
  <%= form.text_field :text, class:"mt-4 block w-full border-black border-4 p-4 sm:text-sm", placeholder:"Description" %>
  <div>
    <%= form.submit "Submit", class: "bg-slate-600 text-white rounded shadow px-3 py-1" %>
  </div>
<% end %>