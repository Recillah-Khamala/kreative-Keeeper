<section class="post-container px-8 hover:text-white">
  <%= render "common/user", user: @user %>
  <div>
    <div class="border px-4 py-4 my-4">
      <h2 class="bio text-xl font-bold">User Bio</h2>
      <br>
      <p><%= @user.bio %></p>
    </div>
    <ul class="border px-4 py-4">
      <% @user.recent_posts.each do |post|%>
        <li class="border gap-3">
          <div class="gap-4 rounded-md">
            <h3 class="font-bold">Post #<%= post.id%></h3>
            <br>
            <div>
              <h4><%= post.title%></h4>
              <br>
              <p><%= post.text %></p>
              <div class="text-like text-right pr-2 pl-40 rounded-md">
                <span>Comments: <%= post.commentscounter%>,</span>
                <span>Likes: <%= post.likescounter%></span>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
    <%= link_to user_posts_path(@user) do %>
      <button class="bg-slate-500 text-white mx-32 px-24 py-1 rounded shadow mt-5 hover:bg-slate-600 active:scale-105">See all posts</button>
    <% end %>
  </div>
</section>
