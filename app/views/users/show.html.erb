<div>
  <h1 class="font-bold text-4xl">Posts for <%= @user.name %></h1>

  <ul class="list-group">
    <% @user.posts.each do |post| %>
      <li class="list-group-item p-4">
        <h3 class="text-lg font-bold mb-2">
          <%= post.title %>
        </h3>
        <p class="text-gray-600">
          <%= post.body %>
        </p>
      </li>
    <% end %>
  </ul>
</div>
